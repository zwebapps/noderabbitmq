{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "dom"
      ],
      "baseUrl": "./",
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
    },
    "include": ["./"],
    "exclude": ["node_modules"]
  }
  